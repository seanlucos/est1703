<% if session[:mobile] == "Y" %>
  <div class="container-fluid">
    <div class='row'> 
      <br>
      <% if params[:param1] == 'confirm' %>
        <div align="left" class="latest col-sm-8 gutter-0" >
          <%= session[:step2]%> [Id: <%= @article.id %>] - Continue...

        </div>
        <div class="latest col-sm-12 gutter-0"><hr></div>
      <% else %>
        <div align="left" class="latest col-sm-6 gutter-0" >
          Modify Ad
        </div>
        <div align="right" class="latest col-sm-6 gutter-0" >
          Id: <%= @article.id %>
        </div> 
        <div class="latest col-sm-12 gutter-0"><hr></div>        
        <% session[:step2] = "Modify Ad" %>
      <% end %>
    </div>
  </div>
  <%= render 'mmform' %>
  <br><br><br><br>
<% else %>
  <div class="container">
    <div class='row'> 
      <div class='col-sm-12 gutter-0'><br>
        <% if params[:param1] == 'confirm' %>
          <div align="left" class="latest col-sm-6 gutter-0" >
            <%= session[:step2]%> - Continue...
          </div>
          <div align="right" class="latest col-sm-6 gutter-0" >
            Id: <%= @article.id %>
          </div>
          <div class="latest col-sm-12 gutter-0"><hr></div>
        <% else %>
          <div align="left" class="latest col-sm-6 gutter-0" >
            Modify Ad
          </div>
          <div align="right" class="latest col-sm-6 gutter-0" >
            Id: <%= @article.id %>
          </div> 
          <div class="latest col-sm-12 gutter-0"><hr></div>        
          <% session[:step2] = "Modify Ad" %>
        <% end %>
      </div>
      <%= render 'form' %>
    </div><br><br><br>
  </div>
  <br><br><br><br> 
<% end %>