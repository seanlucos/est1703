<div class="container">
  <div class="row">
    
    <div class="latest"><BR>
      <div class="col-md-12 gutter-0">MANAGE USERS: <%= params[:status] %> Account Listings...</div>
      <br><br>
      
      <div align="center" class="col-md-12"> 
        <%= link_to "Pending", users_path(:status => "Pending"), class: "btn btn-default" %>  
        <%= link_to "Basic-30 A/C", users_path(:status => "Basic"), class: "btn btn-info" %>  
        <%= link_to "Premier-100 A/C", users_path(:status => "Premier"), class: "btn btn-info" %>
        <%= link_to "Agency-1000 A/C", users_path(:status => "Agency"), class: "btn btn-info" %>
      </div>
    </div>
    
    
    <div class="latest col-md-12 gutter-0"><hr></div>
    <div class='row'> 
      <div class='col-sm-offset-0 col-xs-12'>
        <%= will_paginate %>
        <table class="table table-striped">
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to gravatar_for(user), user_path(user) %>
              </td>
              <td>
                <b>Id: <%= user.id %>- <%= user.name %></b><br>
                Email: <%= user.email %>
                <%#= link_to pluralize(user.articles.count, "article"), user_path(user) if user.articles %>
                <li><%= link_to pluralize(user.articles.count, "article"), articles_path(:usr => user.id) if user.articles %></li>
                <li>Premier Date: <%= user.purchased_at %></li>
              </td>
              <td>
                <% if logged_in? and current_user.admin? %>
                  <br>
                  
                  <!--DELETE /users/:id(.:format)              users#destroy-->
                  <%= link_to "Delete user", user_path(user), method: :delete,
                  data: { confirm: "Are you sure you want to delete this user and all its articles?" }, class: "btn btn-xs btn-danger" %>&nbsp;
                  
                  <%= link_to "Update user", edit_user_path(user), class: "btn btn-xs btn-primary" %>
                  
                  <%= link_to "Suspend user", user_path(user), method: :delete,
                  data: { confirm: "Are you sure you want to suspend this user?" }, class: "btn btn-xs btn-warning" %>&nbsp;
                  
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div><br><br><br>
</div>    